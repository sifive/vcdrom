{
  "name": "vcdrom",
  "version": "1.5.0",
  "description": "Standalone VCD viewer PWA application",
  "main": "index.js",
  "scripts": {
    "test": "eslint lib",
    "browserify": "browserify ./lib/vcdrom.js > app/vcdrom.js",
    "build": "cd ../.. && ./build.sh -i -d drom",
    "watch": "nodemon --exec npm run build --watch lib  --watch src --watch build.sh --ext js,md,json",
    "postinstall": "patch-package"
  },
  "files": [
    "app/*.html",
    "app/*.ico",
    "app/*.woff2",
    "app/*.wasm",
    "app/*.css",
    "app/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavedrom/vcdrom.git"
  },
  "author": "alex.drom@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wavedrom/vcdrom/issues"
  },
  "homepage": "https://github.com/sifive/vcdrom#readme",
  "devDependencies": {
    "@drom/eslint-config": "^0.12.0",
    "@wavedrom/doppler": "^1.8.1",
    "browserify": "^17.0.0",
    "eslint": "^8.44.0",
    "http-server": "^14.1.0",
    "onml": "^2.1.0",
    "style-mod": "^4.0.3",
    "terser": "^5.18.2",
    "vcd-stream": "^1.4.0",
    "watchify": "^4.0.0",
    "waveql": "^1.6.0"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint8/node12",
    "env": {
      "es2020": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  }
}
