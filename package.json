{
  "name": "vcdrom",
  "version": "1.1.1",
  "description": "Standalone VCD viewer PWA application",
  "main": "index.js",
  "scripts": {
    "test": "eslint lib",
    "browserify": "browserify ./lib/vcdrom.js > app/vcdrom.js",
    "build": "cd ../.. && ./build.sh -i -d drom",
    "watch": "nodemon --exec npm run build --watch lib --watch ../doppler/lib"
  },
  "files": [
    "app/*.html",
    "app/*.ico",
    "app/*.woff2",
    "app/*.wasm",
    "app/*.css",
    "app/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavedrom/vcdrom.git"
  },
  "author": "alex.drom@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wavedrom/vcdrom/issues"
  },
  "homepage": "https://github.com/wavedrom/vcdrom#readme",
  "devDependencies": {
    "@drom/eslint-config": "^0.10.0",
    "doppler": "../doppler",
    "browserify": "^17.0.0",
    "eslint": "^8.15.0",
    "http-server": "^14.1.0",
    "onml": "^2.1.0",
    "terser": "^5.15.0",
    "vcd-stream": "^1.3.0",
    "watchify": "^4.0.0",
    "waveql": "^1.1.0",
    "nodemon": "^2.0.20"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint4/node8",
    "env": {
      "es2020": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "prettier": {
    "trailingComma" : "none",
    "singleQuote": true
  }
}
