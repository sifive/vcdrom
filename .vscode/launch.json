{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Local Linux Chrome Launch",
            "runtimeExecutable": "/usr/bin/google-chrome",
            "userDataDir": false,
            "runtimeArgs": ["--remote-debugging-port=9222"],
            "port": 9222,
            "sourceMaps": true,
            "pathMapping": {
                "/.metadata/.plugins/com.sifive.freedomstudio.util/pvapp/1.0/": "${workspaceFolder}",
            }
        },

        {
            "type": "chrome",
            "request": "attach",
            "name": "Local Chrome Attach",
            "port": 9222,
            "sourceMaps": true,
            "pathMapping": {
                "/.metadata/.plugins/com.sifive.freedomstudio.util/pvapp/1.0/": "${workspaceFolder}",
            }
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Remote Chrome Attach",
            "port": 5656,
            "address": "192.168.1.120",
            "sourceMaps": true,
            "pathMapping": {
                "/.metadata/.plugins/com.sifive.freedomstudio.util/pvapp/1.0/": "${workspaceFolder}",
            }
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Local Firefox Attach",
            "port": 6000,
            "pathMappings": [
                {
                    "url": "http://127.0.0.1:*/.metadata/.plugins/com.sifive.freedomstudio.util/pvapp/1.0/lib",
                    "path": "${workspaceFolder}/lib"
                }
            ]
        }
    ]
}